<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_centerInParent="true"
                  android:layout_margin="20dp">

        <Button android:layout_width="match_parent" android:layout_height="100dp"
                android:id="@+id/bUserInfo" android:text="Kullanıcı Bilgileri"/>

        <Button android:layout_width="match_parent" android:layout_height="100dp"
                android:id="@+id/bUserECG" android:text="ECG Anomali"/>

        <Button android:layout_width="match_parent" android:layout_height="100dp"
                android:id="@+id/bUserECGWithDates" android:text="Tarihe Göre Arama Yap"/>


    </LinearLayout>

</RelativeLayout>