<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_margin="20dp"
                  android:layout_centerInParent="true"
                  android:orientation="vertical">

        <Button android:layout_width="match_parent" android:layout_height="100dp"
                android:id="@+id/bShowAllPatients"
                android:layout_marginBottom="5dp"
                android:text="Tüm Hastaları Göster"/>


        <Button android:layout_width="match_parent" android:layout_height="100dp"
                android:id="@+id/bShowAllEnrolledPatients"
                android:layout_marginTop="5dp"
                android:text="Takip Ettiğim Hastaları Göster"/>

    </LinearLayout>

</RelativeLayout>